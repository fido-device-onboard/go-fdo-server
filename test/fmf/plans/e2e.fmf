summary: FDO test plan
description: Fast smoke tests + comprehensive FDO protocol testing

discover:
    how: fmf

provision:
    how: virtual
    memory: 2048MB
    disk: 10GB

prepare:
  - how: shell
    script: |
      # Enable COPR to get go-fdo-client
      dnf install -y 'dnf-command(copr)'
      dnf copr enable -y @fedora-iot/fedora-iot
  - how: install
    package:
      - go-fdo-server
      - go-fdo-server-manufacturer
      - go-fdo-server-rendezvous
      - go-fdo-server-owner
      - go-fdo-client
      - golang
      - make
      - openssl
      - curl
      - git

execute:
    how: tmt
