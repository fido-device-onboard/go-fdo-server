[Unit]
Description=Go FDO rendezvous server
After=network.target

[Service]
Type=simple
PrivateDevices=yes
CacheDirectory=go-fdo-server-rendezvous
StateDirectory=go-fdo-server-rendezvous
ExecStart=/bin/sh -c 'exec /usr/bin/go-fdo-server \
                                 --db-type ${DATABASE_TYPE} \
                                 --db-dsn ${DATABASE_DSN} \
                                 ${TLS_OPTS} \
                                 rendezvous ${LISTEN_IP}:${LISTEN_PORT}'
User=go-fdo-server-rendezvous

EnvironmentFile=-/etc/sysconfig/go-fdo-server-rendezvous

[Install]
WantedBy=multi-user.target
